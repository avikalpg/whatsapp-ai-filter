{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "NodeNext",
		"sourceMap": true
	},
	"include": [
		"./src/**/*",
		"./**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}